<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<style>
        body {
            background: #f7f7f7;
            margin: 0px;
            padding: 0px;

        }

        .container-fluid {
            margin: 0px;
            padding: 0px;
        }

        .form-box {
            max-width: 600px;
            margin: auto;
            padding: 50px;
            background: #ffffff;
            border: 10px solid #f2f2f2;
        }

        h1, p {
            text-align: center;
        }

        input, textarea {
            width: 100%;
        }

        .help-block.text-red {
            color: red;
        }

        input, select, textarea {
            max-width: 100%;
        }

        input.btn-block.btn-primary {
            padding: 11px;
            border: none;
            border-radius: 4px;
        }
        p.search-heading  {
            font-size: 20px;
        }
        text{
            font-size:16px;
        }

        .jumbotron {
            background-image: linear-gradient(rgba(0,0,0, 0.5), rgba(0,0,0, 0.5)),url("../../images/real-homes.jpg");
            background-size: cover;
            height: 90vh;
            vertical-align: middle;
            color: #fff;
            margin-top: -85px !important;
            font-family: 'Oswald', sans-serif;
        }

        .navbar-header {
            padding-left: 30px;
        }
        .navbar {
            position: relative;
            min-height: 67px;
            margin-bottom: 20px;
            border: 1px solid transparent;
        }
        a.navbar-brand {
            font-size: 46px;
            padding-top: 22px;
        }
        .navbar-inverse .navbar-nav > li > a {
            color: #fff;
            padding-top: 34px;
            font-size: 21px;
        }
            .navbar-inverse .navbar-nav > li > a:hover, .navbar-inverse .navbar-nav > li > a:focus {
                color: #cab6ff;
                background-color: transparent;
            }
        .vertical-center {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
        .web-body {
            margin-top: 85px;
        }
        img.navbar-brand {
            width: 100%;
            height: 100%;
        }

        .navbar-right {
            float: right !important;
             margin-right: 0px;
        }
</style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid navigation-bar">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src='~/images/realhomeslogo.png' class="navbar-brand">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Properties", "Properties", "Property")</li>
                    <li>@Html.ActionLink("Search Property", "SearchProperty", "Property")</li>                   
                    <li>@Html.ActionLink("Register", "Register", "Sellers")</li>
                    <li>@Html.ActionLink("Add Property", "AddProperty", "Property")</li>
                    <li>@Html.ActionLink("My Account", "Index", "Sellers")</li>
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid web-body">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Real Homes</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>