@{
    ViewBag.Title = "Property";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container mt-3">
        @if (Model != null)
        {
            <h1 class="properties text-center">Property Details</h1>
            <hr>
            <hr>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h1 class=" text-center text-uppercase display-3">Property Location:@item.Location</h1>
                            </div>
                            <div class="panel-body">
                                <h3>Sub Urban:<strong>@item.Suburb</strong></h3>
                                <h3>Number Of Rooms:<strong>@item.NumberOfRooms</strong></h3>
                                <h3>Property Type:<strong class="text-capitalize">@item.PropertyType</strong></h3>
                                <h3>Floor Area:<strong>@item.FloorArea yd²</strong></h3>
                                <h3>Land Area:<strong>@item.LandArea</strong></h3>
                                <h3>RV:<strong>@item.RV</strong></h3>
                                <h3>Seller Contact:<strong><a href="mailto:@item.SellerEmail">@item.SellerEmail</a></strong></h3>

                                @if (Session["Email"] != null)
                                {
                                    if (@item.SellerEmail == Session["Email"].ToString())
                                    {<hr>
                                        <a href="DeleteProperty/@item.PropertyID" class="btn btn-danger btn">Delete Property</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>